# AI Business Assistant - local development environment variables

ENV=local
PROJECT_NAME="AI Business Assistant"
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=CHANGE_ME_CHANGE_ME_CHANGE_ME_CHANGE_ME
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_TTL_SECONDS=3600

# Data stores
POSTGRES_DSN=postgresql+asyncpg://aba:aba@postgres:5432/aba
REDIS_URL=redis://redis:6379/0

# Async task processing
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Vector DB
QDRANT_URL=http://qdrant:6333

# Gateway upstream service URLs (docker-compose service names)
API_GATEWAY_AUTH_SERVICE_URL=http://auth:8001
API_GATEWAY_ASSISTANT_SERVICE_URL=http://assistant:8002
