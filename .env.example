# Application Settings
APP_NAME=Business AI Assistant
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Database Configuration (REQUIRED)
# For local development without Docker: use postgres:postgres@localhost:5432/business_ai
# For Docker/compose: use aba:aba@postgres:5432/aba
DATABASE_URL=postgresql+asyncpg://aba:aba@postgres:5432/aba
POSTGRES_DSN=postgresql+asyncpg://aba:aba@postgres:5432/aba
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (REQUIRED)
# For local development: use redis://localhost:6379/0
# For Docker/compose: use redis://redis:6379/0
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50
CACHE_TTL=3600

# Security (REQUIRED - CHANGE IN PRODUCTION)
SECRET_KEY=change-me-in-production-use-random-secret-key-min-32-chars
JWT_SECRET_KEY=change-me-in-production-use-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# OAuth2 (Optional - for social login)
OAUTH2_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# CORS Settings (REQUIRED - adjust for production)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Rate Limiting (OPTIONAL)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload (OPTIONAL)
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=[".csv",".json",".xlsx",".xls"]

# Celery (Async Tasks - REQUIRED for worker service)
# For local development: use redis://localhost:6379/1
# For Docker/compose: use redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# RabbitMQ (Optional - alternative message broker)
# For local development without Docker: use amqp://guest:guest@localhost:5672//
# For Docker/compose: use amqp://guest:guest@rabbitmq:5672//
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Qdrant Vector Database (Optional - for RAG features)
# For local development: use http://localhost:6333
# For Docker/compose: use http://qdrant:6333
QDRANT_URL=http://qdrant:6333

# API Gateway Service URLs (REQUIRED for gateway service)
# For local development: use http://localhost:8001 and http://localhost:8002
# For Docker/compose: use http://auth:8001 and http://assistant:8002
API_GATEWAY_AUTH_SERVICE_URL=http://auth:8001
API_GATEWAY_ASSISTANT_SERVICE_URL=http://assistant:8002

# Monitoring (OPTIONAL)
ENABLE_METRICS=true
ENABLE_TRACING=false

# External APIs (Optional)
MARKET_DATA_API_KEY=
NEWS_API_KEY=

# Webhooks (Optional)
WEBHOOK_SECRET=webhook-secret-change-in-production
WEBHOOK_TIMEOUT=30

# Feature Flags (OPTIONAL)
ENABLE_GRAPHQL=true
ENABLE_WEBSOCKET=true
ENABLE_BATCH_PROCESSING=true

# Model Configuration (OPTIONAL)
MODEL_CACHE_DIR=models/cache
MODEL_VERSION=1.0.0
